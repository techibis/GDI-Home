<div class="hero-unit">
  <h2 class="name"><%= chapter.name %></h2>
  <%- linkTo('Edit this chapter', editChapterPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Chapter Properties</h2>
<% for(var i in chapter) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= chapter[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>